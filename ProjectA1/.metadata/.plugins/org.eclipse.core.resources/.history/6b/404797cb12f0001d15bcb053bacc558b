import java.util.ArrayList;

public class Agenda {
	
	ArrayList<Pessoa> pessoas;
	
	public Agenda() {
		pessoas = new ArrayList<Pessoa>();
	}
	
	void armazenarPessoa(String nome, int idade, float altura) {
		if(pessoas.size() == 10) return;
		
		pessoas.add(new Pessoa(nome,idade,altura));
	}
	
	void removerPessoa(String nome) {
		
	}
	
	int buscaPessoa(String nome) { //informe em que posição da agenda está a pessoa 
		for(int i = 0; i < pessoas.size();i++) {
			if(pessoas.get(i).getNome() == nome) {
				return i;
			}
		}
		System.out.println("Pessoa não encontrada");
		return -1;
	}
	
	void imprimeAgenda() { //informe os dados de todas as pessoas da agenda 
		System.out.println("Agenda: \n");
		for(int i = 0; i < pessoas.size();i++) {
			imprimePessoa(i);
		}
	}
	
	void imprimePessoa(int index) { //imprime os dados da pessoa que está na posição “i”da agenda. 
		System.out.printf("\nPessoa %s - %s",index,pessoas.get(index).toString());
	}
}
